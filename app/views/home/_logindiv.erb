<div id='logindiv' class='align_right'>
  <% if current_user %>
    Logged in as <%= current_user.username %>:
    <%= link_to 'Sign Out', destroy_user_session_url %>
  <% else %>
    <%= link_to 'Sign In', new_user_session_url %> or
    <%= link_to 'Register', new_user_registration_url %>
  <% end %>
</div>

<div class="clear"> </div>
